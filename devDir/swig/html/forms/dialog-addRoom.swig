<div class="dialog-add-room row">
	<form action="" class="form">
		<div class="form-group search" id="room-condition">
			 <div class="search-item">
				 	<label for="floorNumber" class="offset-label-short col-form-label">房间楼层</label>
					<div class="offset-input">
						<div class="m-select">
							<input type="text" class="form-control select-txt" value="请选择" readonly data-toggle="dropdown" data-name="floorNumber" id="floorNumber">
							<input type="hidden" name="floorNumber">
							<span class="select-caret"></span>
							<div class="dropdown-menu">
								<a href="javascript:;" class="dropdown-item" data-value="1">1层</a>
								<a href="javascript:;" class="dropdown-item" data-value="2">2层</a>
								<a href="javascript:;" class="dropdown-item" data-value="3">3层</a>
							</div>
						</div>
					</div> 
			 </div>
			 <div class="search-item">
				 	<label for="roomCate" class="offset-label-short col-form-label">　　房型</label>
					<div class="offset-input">
						<div class="m-select">
							<input type="text" class="form-control select-txt" value="请选择" readonly data-toggle="dropdown" data-name="roomCate" id="roomCate">
							<input type="hidden" name="roomCate">
							<span class="select-caret"></span>
							<div class="dropdown-menu">
								<a href="javascript:;" class="dropdown-item" data-value="1">单间</a>
								<a href="javascript:;" class="dropdown-item" data-value="2">双间</a>
							</div>
						</div>
					</div> 
			 </div>
			 <div class="search-item">
				 	<label for="roomNumber" class="offset-label-short col-form-label">　　房号</label>
					<div class="offset-input">
						<input type="text" name="roomNumber" class="form-control w100" id="roomNumber">
					</div> 
			 </div>
			 <div class="search-item">
				 	<label for="roomPrice" class="offset-label-short col-form-label">房间标价</label>
					<div class="offset-input">
						<input type="text" name="roomPrice" class="form-control w100" id="roomPrice">
					</div> 
			 </div>
		</div>
		<div class="form-group">
			<label for="roomPictures" class="offset-label-short col-form-label">房间照片</label>
			<div class="offset-input">
				<div class="upload-container">
					<label class="btn btn-sm btn-primary upload-btn" id="uploadRoomImage" data-name="storeKey">上传图片</label>
					<strong class="upload-help">最多上传6张</strong>
					<div class="upload-img-wrapper clearfix" id="uploadRoomImageContainer"></div>
				</div>
			</div>
		</div> 
		<div class="form-group">
			<label for="remark" class="offset-label-short col-form-label">房间描述</label>
			<div class="offset-input">
				<textarea type="text" name="remark" class="form-control" id="remark" rows="10"></textarea>
			</div>
		</div>
	 </form>
</div>